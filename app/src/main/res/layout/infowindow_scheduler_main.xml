<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="150dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/text_info_window_name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="FEATURE NAME"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content"
        android:layout_width="@dimen/infowindow_width"/>
    <TextView
        android:id="@+id/text_info_window_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:textStyle="italic"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="address 123123123"/>

    <android.support.v7.widget.AppCompatRatingBar
        android:id="@+id/rating_info_window_scheduler"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:numStars="5" />

    <TextView
        android:id="@+id/text_info_window_cost"
        android:text="COST"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

</LinearLayout>