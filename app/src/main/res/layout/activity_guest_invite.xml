<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/layout_guest_invite"
        android:layout_width="match_parent"
        android:layout_height="420dp">
        <ListView
            android:id="@+id/list_guest_invite"
            android:layout_height="420dp"
            android:layout_width="match_parent"/>
        <TextView
            android:id="@+id/empty_guest"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:gravity="center"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textSize="@dimen/text_empty"
            android:text="@string/empty_list_guests"/>
    </RelativeLayout>
    <Button
        android:text="Next"
        android:id="@+id/btn_to_scheduler"
        android:layout_below="@id/layout_guest_invite"
        android:layout_alignEnd="@id/layout_guest_invite"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <Button
        android:id="@+id/btn_invite_guest"
        android:layout_below="@id/layout_guest_invite"
        android:text="Invite"
        android:layout_toLeftOf="@id/btn_to_scheduler"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

</RelativeLayout>