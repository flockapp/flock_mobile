<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="finder.com.flock_client">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".FlockApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".client.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".client.LoginActivity" />
        <activity android:name=".client.RegisterActivity" />
        <activity
            android:name=".client.DashActivity"
            android:label="@string/title_activity_dash"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>