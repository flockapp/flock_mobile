<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="finder.com.flock_client">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:name=".FlockApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="finder.com.flock_client.client.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="finder.com.flock_client.client.LoginActivity"></activity>
        <activity android:name="finder.com.flock_client.client.RegisterActivity"></activity>

    </application>

</manifest>